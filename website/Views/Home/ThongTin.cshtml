@model website.Models.ThongTin
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="main-container col1-layout">
    <div class="main container">
        <div class="account-login">
            <div class="page-title">
                <h2>Thông tin tài khoản</h2>
            </div>
            <fieldset class="col2-set">
                @using (Ajax.BeginForm("ThongTin", "Home", null,
       new AjaxOptions
       {
           HttpMethod = "Post",
           OnSuccess = "thongtin",
           UpdateTargetId = "response",
           InsertionMode = InsertionMode.Replace,
       },
       new { enctype = "multipart/form-data" }
       ))
                {
                    <input name="Id" value="@Model.Id" hidden />
                    <input name="idtk" value="@Model.IdTK" hidden />
                    <div class="col-1 new-users">
                        <strong>Cập nhật thông tin tài khoản</strong>
                        <div class="content">
                            <ul class="form-list">
                                <li>
                                    <label>Họ và tên <span class="required">*</span></label>
                                    <br>
                                    <input type="text" class="input-text required-entry" value="@Model.HoTen" name="HoTen">
                                </li>
                                <li>
                                    <label>Giới tính <span class="required">*</span></label>
                                    <br>
                                    <select class="input-text required-entry" name="GioiTinh">
                                        <option value="1" @(Model.GioiTinh == 1 ? "selected" : "")>Nam</option>
                                        <option value="0" @(Model.GioiTinh == 0 ? "selected" : "")>Nữ</option>
                                    </select>
                                </li>
                                <li>
                                    <label>Ngày sinh <span class="required">*</span></label>
                                    <br>
                                    <input class="input-text required-entry" type="date" value="@Model.NgaySinh.ToString("yyyy-MM-dd")" name="NgaySinh">
                                </li>
                                <li>
                                    <label>Email <span class="required">*</span></label>
                                    <br>
                                    <input class="input-text required-entry" value="@Model.Email" name="Email">
                                </li>
                                <li>
                                    <label>Số điện thoại <span class="required">*</span></label>
                                    <br>
                                    <input class="input-text required-entry" value="@Model.SDT" name="SDT">
                                </li>
                                <li>
                                    <label>Địa chỉ <span class="required">*</span></label>
                                    <br>
                                    <input class="input-text required-entry" value="@Model.DiaChi" name="DiaChi">
                                </li>
                            </ul>
                            <p class="required"></p>
                            <div class="buttons-set">
                                <button type="submit" class="button"><span>Cập nhật</span></button>
                            </div>
                        </div>

                    </div>
                }
            </fieldset>
        </div>
        <br>
        <br>
        <br>
        <br>
        <br>
    </div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>