@model PagedList.IPagedList<website.Models.ThongTin>
@using PagedList.Mvc;
@using PagedList;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var stt = 0;
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4"><span class="text-muted fw-light">Trang chủ /</span> Khách hàng</h4>
    <div class="card">
        <div class="row" style=" display: flex; justify-content: flex-end; padding: 10px 25px; ">

        </div>

        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr class="text-center">
                        <th>Số thứ tự</th>
                        <th>Họ và tên</th>
                        <th>
                            Giới tính
                        </th>
                        <th>Ngày sinh</th>
                        <th>Số điện thoại</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        stt++;
                        <tr class="text-center">
                            <td>
                                @stt
                            </td>
                            <td>
                                @item.HoTen
                            </td>
                            <td>
                                @(item.GioiTinh==1?"Nam":"Nữ")
                            </td>
                            <td>
                                @item.NgaySinh.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                @item.SDT
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>@item.DiaChi</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <div class="col-md-12" style="text-align:right;color:black">
                Tổng số bản ghi: @ViewBag.total &nbsp;
            </div>
            <ul class="pagination" style="float:right;margin-right:20px">

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li>
                        <a class="page-link @(Convert.ToInt32(ViewBag.pageNumber)==i?"active1":"")" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }
            </ul>
        </div>
    </div>

</div>